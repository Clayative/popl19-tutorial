run=../src/runwhile
#../src/Main

.PHONY: all good bad

all : bad good

good :
	@echo "==========================================================================="
	@echo "============================ Successful tests ============================="
	@echo "==========================================================================="
	$(run) fib.c
	$(run) sum.c
	$(run) gcd.c


bad :
	@echo "==========================================================================="
	@echo "============================== Failing tests =============================="
	@echo "==========================================================================="
	! $(run) bad/unboundVariable.c
	@echo "---------------------------------------------------------------------------"
	! $(run) bad/typeMismatch.c
	@echo "---------------------------------------------------------------------------"
	! $(run) bad/shadowing.c

# EOF
